<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_details_card"
    android:layout_width="fill_parent"
    app:cardElevation="4dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <com.pkmmte.view.CircularImageView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageDriver"
                android:src="@drawable/driver50"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="date"
                android:id="@+id/txtCreated"
                android:layout_toRightOf="@+id/imageDriver"
                android:layout_toEndOf="@+id/imageDriver"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="name"
                android:id="@+id/txtDriverName"
                android:layout_toRightOf="@+id/txtCreated"
                android:layout_toEndOf="@+id/txtCreated"
                android:layout_centerVertical="true"
                android:layout_gravity="start|center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/approvedSign"
                android:src="@drawable/attention_26"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/txtDriverName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

