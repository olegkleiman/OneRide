<?xml version="1.0" encoding="utf-8"?>

<com.labs.okey.oneride.views.LayoutRipple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:rippleSpeed="60.0"
    app:rippleColor="@color/ColorPrimary"
    tools:ignore="MissingPrefix"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:id="@+id/mode_row"
    android:clickable="true"
    android:layout_width="fill_parent"
    android:layout_height="64dp">

    <ImageView
        android:layout_width="@dimen/mode_image_width"
        android:layout_height="@dimen/mode_image_height"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/mode_image"
        android:src="@drawable/driver64"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        fontPath="fonts/Roboto-Regular.ttf"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Driver"
        android:id="@+id/mode_name"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

</com.labs.okey.oneride.views.LayoutRipple>