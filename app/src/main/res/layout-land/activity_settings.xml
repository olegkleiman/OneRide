<layout>
    <data>
        <import type="com.labs.okey.oneride.model.User" />
        <variable
            name="user"
            type="User" />
    </data>

    <!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".SettingsActivity" >

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/tool_bar" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/settings_header_layout"
                    android:layout_width="@dimen/avatar_background_settings_width"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.pkmmte.view.CircularImageView
                        android:layout_width="@dimen/avatar_settings_size"
                        android:layout_height="@dimen/avatar_settings_size"
                        android:src="@{user.pictureURL}"
                        android:id="@+id/imageProfileView"
                        app:border="true"
                        app:border_color="#FFFFFFFF"
                        app:border_width="4dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp">
                        <ImageView
                            android:id="@+id/provider_logo"
                            android:contentDescription="@string/auth_provider"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:scaleType="fitXY" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/white"
                            android:text="@{user.firstName + ' ' + user.lastName, default=USER_NAME}"
                            android:id="@+id/textUserName"
                            android:layout_gravity="top|center_vertical"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="12dp" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/user_details_card"
                        android:layout_width="fill_parent"
                        app:cardElevation="4dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/card_horizontal_margin"
                        android:layout_marginRight="@dimen/card_horizontal_margin"
                        android:layout_marginTop="@dimen/card_horizontal_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="12dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:text="@{user.email, default=EMAIL}"
                            android:id="@+id/textUserEmail"
                            android:drawableStart="@drawable/ic_email_blue_24dp"
                            android:drawableLeft="@drawable/ic_email_blue_24dp"
                            android:drawablePadding="12dp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/settings_card_row_height">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:clickable="true"
                                android:onClick="onPhoneNumberClick"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@{user.phone, default=PHONE_NUMBER}"
                                android:id="@+id/textUserPhone"
                                android:drawableStart="@drawable/ic_phone_blue_24dp"
                                android:drawableLeft="@drawable/ic_phone_blue_24dp"
                                android:drawablePadding="12dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:onClick="onPhoneNumberClick"
                                android:text="@string/edit"
                                android:textColor="@color/ColorPrimary"
                                android:layout_gravity="center_vertical" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_horizontal_margin"
                        android:layout_marginLeft="@dimen/card_horizontal_margin"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/ColorPrimary"
                        android:text="@string/title_section_cars"
                        android:layout_marginTop="8dp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/ColorBackground"
                        android:layout_weight="0.5"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="@dimen/card_horizontal_margin"
                        android:layout_marginRight="@dimen/card_horizontal_margin"
                        android:layout_marginBottom="@dimen/card_horizontal_margin"
                        android:layout_marginTop="@dimen/card_vertical_margin">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/carsListView" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/add_car_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_action_add"
                            app:elevation="4dp"

                             app:layout_anchorGravity="bottom|right|end"

                            android:layout_gravity="end|bottom"
                            app:fabSize="normal"

                            app:backgroundTint="@color/ColorAccent"
                            app:borderWidth="0dp"
                            android:onClick="onAddCar"

                            android:layout_marginEnd="@dimen/fab_horizontal_margin"
                            android:layout_marginRight="@dimen/fab_horizontal_margin"
                            android:layout_marginBottom="@dimen/fab_vertical_margin"

                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                        </android.support.design.widget.FloatingActionButton>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!-- The navigation drawer -->
        <include
            layout="@layout/nav_drawer" />

</android.support.v4.widget.DrawerLayout>

</layout>
